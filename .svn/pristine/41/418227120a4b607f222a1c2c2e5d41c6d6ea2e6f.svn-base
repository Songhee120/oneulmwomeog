<script>
   /* 리뷰 평점 별점으로 매기기 */
   $( ".star_rating a" ).click(function() {
       $(this).parent().children("a").removeClass("on");
       $(this).addClass("on").prevAll("a").addClass("on");
       return false;
   });
   
   /* 하트 좋아요 누르기 */
   var count = 0;
   
   $( ".heart a" ).click(function(){
	   count += 1;
	   
	   if(count % 2 == 0){
	   	$(this).removeClass("on");
	   }else{
		$(this).addClass("on");   
	   }
   })
   
   $( ".scrap a" ).click(function(){
	   count += 1;
	   
	   if(count % 2 == 0){
	   	$(this).removeClass("on");
	   }else{
		$(this).addClass("on");   
	   }
   })
</script>
