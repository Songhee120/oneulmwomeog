CREATE SEQUENCE SCRAP_SEQ;

CREATE TABLE TBL_SCRAP (
 	MEM_NO NUMBER(10),
 	REVIEW_RES VARCHAR2(100),
 	REVIEW_STAR NUMBER(10) NOT NULL,
 	MENU VARCHAR2(100) NOT NULL,
 	REVIEW_DATE DATE,
 	CONSTRAINT SCRAP_FK FOREIGN KEY(MEM_NO) REFERENCES TBL_MEMBER(MEM_NO),
 	CONSTRAINT SCRAP_PK PRIMARY KEY(MEM_NO)
);


CREATE TABLE TBL_SCRAPFILES(
	MEM_NO NUMBER(10),
	REVIEW_PHOTO VARCHAR2(100),
	CONSTRAINT SCRAPFILES_FK FOREIGN KEY(MEM_NO) REFERENCES TBL_SCRAP(MEM_NO),
	CONSTRAINT SCRAPFILES_PF PRIMARY KEY(MEM_NO)
);


  

