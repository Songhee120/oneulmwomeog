<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http//mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authority">
	<!--회원 사용 여부 확인-->
	<select id="mem_check" parameterType="_int" resultType="authorityVO">
		SELECT * FROM TBL_AUTHORITY WHERE MEM_NO = #{mem_no}
	</select>
	
	<!--회원 정보 넣기 -->
	<insert id="insertAuthority" parameterType="authorityVO">
		INSERT INTO TBL_AUTHORITY VALUES(#{mem_no}, SYSDATE)
	</insert>
	
	<!--남은 제한 시간 확인-->
	<select id="timeCheck" parameterType="string" resultType="double">
		SELECT (TRUNC(SYSDATE, 'MI') - TO_DATE(#{authority_date},'YYYY-MM-DD HH24:MI:SS')) * 1440 FROM DUAL
	</select>
	
	<!--회원 정보 삭제 -->
	<delete id="deleteAuthority" parameterType="_int">
		DELETE FROM TBL_AUTHORITY WHERE MEM_NO = #{mem_no}
	</delete>
</mapper>


















